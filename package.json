{
  "name": "ffmpeg-gui",
  "private": true,
  "version": "0.0.0",
  "description": "A simple FFmpeg GUI for metadata editing",
  "author": {
    "name": "User",
    "email": "user@example.com"
  },
  "homepage": "https://github.com/user/ffmpeg-gui",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder --linux",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "fluent-ffmpeg": "^2.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "electron-is-dev": "latest",
    "ffmpeg-static": "latest",
    "ffprobe-static": "latest"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.22",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.ffmpeg.gui",
    "productName": "Editor de Metadatos Multimedia",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/ffmpeg-static/ffmpeg",
        "to": "bin/ffmpeg"
      },
      {
        "from": "node_modules/ffprobe-static/bin/linux/x64/ffprobe",
        "to": "bin/ffprobe"
      }
    ],
    "linux": {
      "target": "deb",
      "icon": "public/electron-vite.svg",
      "category": "AudioVideo"
    }
  }
}
